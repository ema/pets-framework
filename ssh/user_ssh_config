ForwardAgent no

VisualHostKey yes
VerifyHostKeyDNS ask
StrictHostKeyChecking ask

UserKnownHostsFile ~/.ssh/known_hosts
HashKnownHosts no

# SSH Keys in the TPM!
# Get public key with ssh-keygen -D /usr/lib/x86_64-linux-gnu/libtpm2_pkcs11.so.1
# https://blog.ledger.com/ssh-with-tpm/
PKCS11Provider /usr/lib/x86_64-linux-gnu/libtpm2_pkcs11.so.1
