# pets: destfile=/home/ema/.muttrc, owner=ema, group=ema, mode=0600
# pets: package=mutt
#
# Warning! This file has been generated by pets(1). Any manual modification
# will be lost.

source ~/.muttsecrets

#set folder="imaps://imap.gmail.com/"

# Maildir-related config, get rid of the following section for IMAP
set mbox_type=Maildir
set mbox="~/Mail"
set mail_check_stats=yes
set folder="/home/ema/Mail"
mailboxes `echo -n "+ "; find ~/Mail -maxdepth 1 -type d -printf "+'%f' "`
# End of Maildir stuff

set spoolfile="+INBOX"
set postponed="+[GMAIL]/Drafts"
set smtp_url="smtps://$imap_user:$imap_pass@smtp.gmail.com/"
set imap_check_subscribed=yes

# Sent messages get saved under "=[Gmail]/Sent Mail" automatically
unset record

# If we haven't read the message, leave it marked as N
set mark_old=no

set header_cache="$HOME/.cache/mutt/headers/"
set message_cachedir="$HOME/.cache/mutt/messages/"

my_hdr From: Emanuele Rocca <ema@linux.it>
set use_envelope_from=yes
set edit_headers=yes
set autoedit=yes

unignore From To Cc Bcc Date Reply-To Subject X-Mailer Message-Id X-Mailing-List mail-followup-to
unhdr_order *
hdr_order From To Subject

alternative_order text/plain text/html
auto_view text/html
# Next line is to open HTML with firefox when pressing <return> on HTML
# attachment. See ~/.mailcap.
bind attach <return>    view-mailcap

# Color scheme
source ~/.muttcolors/ema.muttrc
